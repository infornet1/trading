{
  "strategy_name": "Bitcoin Scalping v2.0 Enhanced",
  "strategy_type": "scalping",

  "initial_capital": 1000.0,
  "leverage": 5,

  "risk_per_trade": 1.0,
  "daily_loss_limit": 3.0,
  "max_drawdown": 10.0,
  "max_positions": 1,
  "max_concurrent_trades": 1,
  "consecutive_loss_limit": 3,
  "max_daily_trades": 30,

  "symbol": "BTC-USDT",
  "timeframe": "1m",
  "signal_check_interval": 30,

  "ema_fast": 8,
  "ema_slow": 21,
  "ema_micro": 5,
  "rsi_period": 14,
  "rsi_oversold": 30,
  "rsi_overbought": 70,
  "stoch_period": 14,
  "stoch_smooth": 3,
  "volume_ma_period": 20,
  "atr_period": 14,

  "target_profit_pct": 0.006,
  "max_loss_pct": 0.003,
  "max_position_time": 180,

  "min_volume_ratio": 1.3,
  "min_confidence": 0.70,
  "avoid_choppy_markets": true,
  "block_choppy_signals": true,
  "order_book_imbalance": 0.6,

  "enable_short_bias": true,
  "short_bias_multiplier": 1.5,

  "sl_atr_multiplier": 3.0,
  "tp_atr_multiplier": 6.0,

  "signal_cooldown_seconds": 120,
  "avoid_low_liquidity_hours": true,
  "low_liquidity_hours_utc": [0, 1, 2, 3],

  "trading_mode": "paper",
  "enable_email_alerts": true,
  "enable_console_dashboard": true,

  "database": {
    "type": "sqlite",
    "path": "data/trades.db",
    "trades_table": "scalping_trades",
    "performance_table": "scalping_performance_snapshots"
  },

  "logging": {
    "level": "INFO",
    "file": "logs/live_trading.log",
    "max_size_mb": 10,
    "backup_count": 5
  }
}
